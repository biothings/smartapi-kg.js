{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "incremental": true,
    "outDir": "./built",
    "allowJs": true,
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "./src/**/*",
    "./src/data/smartapi_specs.json",
    "./src/data/predicates.json"
  ],
  "exclude": [
    "node_modules",
    "__tests__/"
  ]
}
